<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:plainpie="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_battery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    tools:context="dev.levkovskiy.batterymanager.ui.activity.BatteryActivity">

    <dev.levkovskiy.batterymanager.ui.view.PieView
        android:id="@+id/chBattery"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        plainpie:inner_pie_padding="84"
        plainpie:inner_text_visibility="true"
        plainpie:percentage="1"
        plainpie:percentage_size="20" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/battery_description"
        android:textSize="14sp" />
</LinearLayout>
